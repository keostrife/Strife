			}
			$user = $query->fetch();
			if(extension_loaded('apc') && APC_ENABLE) apc_add("User_".$user["username"], $user, APC_CACHE_TIME);
			return $user;
		}

		public static function getUserByEmail($email) {
			if(extension_loaded('apc') && APC_ENABLE) {
				if($cache = apc_fetch("User_".$email)) return $cache;
			}
			global $dbk;
			$query = $dbk->prepare("SELECT * FROM Users WHERE email=?");
