	class User {
		
		public function __construct()
		{
			
		}

		public function init(){
			if(DEVELOPMENT_MODE) $this->dbInit();
		}

		public static function getUser() {
			if(isset($_SESSION["userid"])) return self::getUserById($_SESSION["userid"]);
			else return false;
		}

		public static function getUserById($userID){
			if(extension_loaded('apc') && APC_ENABLE) {
				if($cache = apc_fetch("User_".$userID)) return $cache;
			}
			global $dbk;
			$query = $dbk->prepare("SELECT * FROM Users WHERE id=?");
			$query->bindParam(1, $userID);
			$query->execute();
			if($query->rowCount() < 1) {
				return false;
			}
			$user = $query->fetch();
			if(extension_loaded('apc') && APC_ENABLE) apc_add("User_".$user["id"], $user, APC_CACHE_TIME);
			return $user;
		}

		public static function getUserByUsername($username) {
			if(extension_loaded('apc') && APC_ENABLE) {
				if($cache = apc_fetch("User_".$username)) return $cache;
			}
			global $dbk;
			$query = $dbk->prepare("SELECT * FROM Users WHERE username=?");
			$query->bindParam(1, $username);
